# Alias definitions.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# handy aliases
alias ls='ls --color=auto'
#alias dir='dir --color=auto'
#alias vdir='vdir --color=auto'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ld='ls -d .*'

# bash:
alias b='v ~/.bashrc'
alias ba='v ~/dotfiles/.baliases'
alias sb='source ~/.bashrc'

alias clc='clear'

# python3 aliases:
alias python='python3'
alias pip='pip3'

# django related aliases:
alias drs='python3 manage.py runserver'
alias dt='python3 manage.py test'

# virtualenv related aliases:
alias va='source virtualenv/bin/activate'
alias val='va && la'
alias vd='deactivate'
alias vcal='python3 -m venv virtualenv && va && pip install --upgrade pip && la' # create virtualenv & upgrade pip & activate & list directory

# git related aliases:
alias gk='gitk'
alias gs='git status'
alias gd='git diff'
alias glg='git log --oneline --graph --decorate --all'

# my projects directory related aliases:
alias sl='cd ~/Projects/superlists/'

# vim:
alias v='vim'
alias vclc='rm -r ~/.vim/dirs/tmp/'

# tmux sessions (m√≥j skrypt)
alias ts='. ~/scripts/tmux_session_runner'
alias nts='. ~/scripts/new_tmux_session_runner'

# running projects:
alias pr='. ~/scripts/projects_runner'

# pbcopy & pbpaste for ssh:
alias pbcopy="xclip -selection clipboard"
alias pbpaste="xclip -selection clipboard -o"

# aliases for TT:
alias brs='cd ~/Projects/brs-django/ && va && la'

# find files containing string:
alias ff='find . -type f -print0 | xargs -0 grep -l'

# Udemy:
alias udemy='cd ~/Projects/Nauka/Udemy/'
